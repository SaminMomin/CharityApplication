
@model CharityApplication.Models.Error
@{Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @*<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />*@
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>

        html,
        body {
            height: 100%;
            margin: 0;
        }

        body {
            background: linear-gradient(#111, #333, #111);
            background-repeat: no-repeat;
            background-size: cover;
            color: #eee;
            position: relative;
            font-family: 'Roboto', sans-serif;
        }

        .message {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

        h1, h2, h3 {
            margin: 0;
            line-height: .8;
        }

        h2, h3 {
            font-weight: 300;
            color: lightslategray;
        }

        h1 {
            font-weight: 700;
            color: darkslategray;
            font-size: 8em;
        }

        h2 {
            margin: 30px 0;
        }

        h3 {
            font-size: 2.5em;
        }

        h4 {
            display: inline-block;
            margin: 0 15px;
        }

        button {
            background: content-box;
            border: 2px solid lightslategray;
            color: lightslategray;
            padding: 5px 15px;
            font-size: 1.25em;
            transition: all 0.15s ease;
            border-radius: 3px;
        }

            button:hover {
                background: darkslategray;
                border: 2px solid darkslategray;
                color: #111;
                cursor: pointer;
                transform: scale(1.05);
            }
    </style>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700" rel="stylesheet">
</head>
<body style="margin:0px">
    <div class="message">
        <h1>Uh Oh !</h1>
        <br />
        <h3>Error encountered!</h3>
        <br />
        <h2>@Model.error</h2>
        <br />
        <!-- use window.history.back(); to go back -->
        @if (Model.type == 1)
        {
            @Html.ActionLink("Sign Up", "Register", "User", new { }, new { @class = "btn btn-primary" });
        }

        @if (Model.type == 2)
        {
            @Html.ActionLink("Login", "Login", "User", new { }, new { @class = "btn btn-primary" });
        }

        @if (Model.type == 3)
        {
            @Html.ActionLink("Sign Up", "Register", "Organization", new { }, new { @class = "btn btn-primary" });
        }

        @if (Model.type == 4)
        {
            @Html.ActionLink("Login", "Login", "Organization", new { }, new { @class = "btn btn-primary" });
        }
    </div>

</body>
</html>
