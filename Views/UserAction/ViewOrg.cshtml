                                {
                                    <img src="~/CardImages/Animals.jpg" alt="Speaker 1" class="img-fluid">
                                }
                                else
                                {
                                    <img src="~/CardImages/Elderly.jpg" alt="Speaker 1" class="img-fluid">
                                }
                                <div class="details">
                                    <h3>@Html.ActionLink(@Model.activeCauses.ElementAt(i * 3 + j).name, "ViewCause", "UserAction", new { causeId = Model.activeCauses.ElementAt(i * 3 + j).Id }, new { })</h3>
                                    <p class="text-break">@Model.activeCauses.ElementAt(i * 3 + j).shortDescription</p>
                                    <div class="row">
                                        <p class="col-md-6">Goal:₹@Model.activeCauses.ElementAt(i * 3 + j).goal</p>
                                        <p class="col-md-6">Collected:₹@Model.activeCauses.ElementAt(i * 3 + j).collected</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        break;
                    }
                }
            </div>
        }

