<section id="facts">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <h2>Statistics</h2>
            <p>Some of our achievements so far</p>
        </div>
        <div class="row counters">
            <div class="col-lg-4 text-center">
                @*<h4 class="speaker details" data-toggle="counter-up">274</h4>*@
                <span class="countfect" data-num=@Model.totalCauses></span>
                <h5 class="speaker details">Causes supported so far</h5>
            </div>
            <div class="col-lg-4 text-center">
                @*<h4 class="speaker details" data-toggle="counter-num">421</h4>*@
                <span class="countfect" data-num=@Model.fundsCollected></span>
