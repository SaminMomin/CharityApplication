<section id="intro">
    <div class="intro-container" data-aos="zoom-in" data-aos-delay="100">
        <h1 class="mb-4 pb-0"><span>@Model.org.name</span></h1>
        <p class="mb-4 pb-0">@string.Concat(Model.org.street, ", ", Model.org.city, ", ", Model.org.state, ", ", Model.org.country)</p>
        <p class="mb-4 pb-0">@string.Concat("Email us to ", Model.org.email)</p>
        <p>or</p>
        <p class="mb-4 pb-0">@string.Concat("Call us at +91", Model.org.contact)</p>

        @*<a href="https://www.youtube.com/watch?v=jDDaplaOz7Q" class="venobox play-btn mb-4" data-vbtype="video" data-autoplay="true"></a>*@
    <a class="about-btn scrollto" target="_blank" href=@string.Concat("https://rinkeby.etherscan.io/tx/",Model.org.transactionhash)>Verify on Etherscan</a>
    </div>
</section><!-- End Intro Section -->
<section id="about">
    <div class="container" data-aos="fade-up">
        <div class="row">
            <div class="col-lg-12">
                <h2>About The Organization</h2>
                <p class="text-justify">
                    @Model.org.description
                </p>
            </div>
        </div>
    </div>
</section><!-- End About Section -->
