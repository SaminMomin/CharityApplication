@model IEnumerable<CharityApplication.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>User Details Menu</h2>
<div class="row">
    <div class="col-md-4">
        @Html.ActionLink("Edit User", "Edit", "User", new { @Id = CharityApplication.Models.General.userId }, new { @class = "btn btn-primary" })
    </div>
    <div class="col-md-4">
        @Html.ActionLink("Delete User", "Delete", "User", new { @Id = CharityApplication.Models.General.userId }, new { @class = "btn btn-danger" })
    </div>
    <div class="col-md-4">
        <a href=@string.Concat("https://kovan.etherscan.io/tx/",CharityApplication.Models.General.userTx) target="_blank" class="btn btn-dark">Click to verify your registration on Blockchain</a>
    </div>
</div>
<h2>User Functionalities Menu</h2>
<div class="row">
    <div class="col-md-6">
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary">World</strong>
                <h6 class="mb-0">
                    <a class="text-dark" href="#">40 Percent of People Can’t Afford Basics</a>
                </h6>
                <div class="mb-1 text-muted small">Nov 12</div>
                <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                <a class="btn btn-outline-primary btn-sm" role="button" href="http://www.jquery2dotnet.com/">Continue reading</a>
            </div>
            <img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src="~/Images/5053309.jpg" style="width: 200px; height: 250px;">
        </div>
    </div>
</div>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.organization)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cause)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.time)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.organization)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cause)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.time)
    </td>
    <td>
        @Html.ActionLink("View Organization", "Edit", new { /* id=item.PrimaryKey */ }) |
        @Html.ActionLink("View Cause", "Details", new { /* id=item.PrimaryKey */ }) |
        @*@Html.ActionLink("Edit User", "7", new { /* id=item.PrimaryKey */ })*@
    </td>
</tr>
}

</table>
